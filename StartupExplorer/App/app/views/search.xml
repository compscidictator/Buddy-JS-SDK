<Alloy>
    <View id="search">
		<View id="subHeader">
			<Button id="btBack" />
		</View>
		<ImageView id="searchHeader">
		<ScrollView>
			<View id="searchArea">
				<TextField class="fieldBox" id="name" hintText="Search Company Name" />
			</View>
			<View class="searchSelect" id="sArea">
				<Label class="selectText">Area</Label>
			</View>
			<View class="searchSelect" id="sIndustry" top="1">
				<Label class="selectText">Industry</Label>
			</View>			
			<View class="searchSelect" id="sFunding" top="1">
				<Label class="selectText">Funding Source</Label>
			</View>	
			<View class="sliderArea">		
				<Label class="sliderLabel">FUNDING AMOUNT</Label>
				<Label class="sliderValue" id="fundingValue" />
				<Slider class="searchSlider" id="sliderFunding" min="0" max="100000000" width="100%" value="5000000" onChange="updateFunding"/>
			</View>
			<View class="sliderArea">		
				<Label class="sliderLabel">NUMBER OF EMPLOYEES</Label>
				<Label class="sliderValue" id="employeeValue" />
				<Slider class="searchSlider" id="sliderEmployee" min="0" max="999" width="100%" value="150" onChange="updateEmployee"/>
			</View>			
		</ScrollView>
		<View id="submitArea">
			<Button id="btSubmit" />
		</View>	
    </View>
</Alloy>