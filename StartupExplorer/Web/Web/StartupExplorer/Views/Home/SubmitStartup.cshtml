@model StartupExplorer.Models.HomeViewModel
@{
    Layout = null;
    ViewBag.Title = "SubmitStartup";
}

<!DOCTYPE HTML>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Startup Explorer</title>
<!--[if IE]>
<script>
document.createElement('header');
document.createElement('footer');
document.createElement('section');
document.createElement('article');
document.createElement('nav');
</script>
<![endif]-->     
<link href="@Url.Content("~/Public/Css/style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Public/Scripts/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Public/Scripts/SubmitStartUp.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        SubmitStartUpFunction();
    });
</script>
</head>

<body>
  <div id="main">
    <!--main start-->
      <div class="inner_main">
        <!--inner_main start-->
          <header id="header">
            <!--header start-->
              <div class="logo">
                <a href="@Url.Action("Index", "Home")"><img src="Public/Images/startup_logo.png" width="350" height="77" alt="Startup Logo"></a>
             </div>
             @*<input name="" type="button" class="submit_btn" value="button">*@
             <a href="@Url.Action("SubmitStartup", "Home")" title="Logout" class="submit_btn">SUMBIT YOUR STARTUP</a>
           <!--header end-->
          </header>         
          <article id="submit_container">
            <!--container start-->
              <div class="sb_title">
                <h2>WANT TO ADD YOUR STARTUP?</h2>
              </div>
              <div class="clear"></div> 
              <section class="download_box">
               <p>First, download the app to check if your Startup is there.</p>
               <p>
                 <a href="#"><img src="Public/Images/ios.png" width="100" height="99" alt="iOS"></a>
                 <a href="#"><img src="Public/Images/android.png" width="100" height="99" alt="android"></a>
                 <a href="#"><img src="Public/Images/windows.png" width="100" height="99" alt="windows"></a>
               </p>
              </section>              
              <section class="submit_box">
                <div class="submit_head">
                 <p>If you don't see your Startup, or some info is wrong,<br> sumbit the form below and we'll be in touch for more info!</p>
                </div>
                <div class="clear"></div>

                <div class="error_msg" id="divErrorMessage">
                @*@if (!string.IsNullOrEmpty(Convert.ToString(Model.ViewMessage)))
                {
                    Convert.ToString(Model.ViewMessage);
                }*@
                @if (TempData.ContainsKey("ViewMessage"))
                {
                <span class="message red">
                   @Convert.ToString(TempData["ViewMessage"])
                </span> 
                <br />
                }
            

                </div>
                @using (Html.BeginForm("SubmitStartup", "Home"))
                {
                    <div class="form_box">
                      <!--form_box start-->
                        <label class="left">STARTUP NAME:</label>
                        <label class="right">STARTUP CITY:</label>
                        <div class="clear"></div>
                        @*<input name="" type="text" class="left">*@
                        @Html.TextBoxFor(x => x.StartUpName, new { @maxlength = 30, @class = "left", @data_required=true })
                        @*<input name="" type="text" class="right">*@
                        @Html.TextBoxFor(x => x.StartUpCity, new { @maxlength = 30, @class = "right", @data_required = true })
                        <div class="clear"></div>
                        <label class="left">STARTUP CATEGORY:</label>
                        <label class="right">STARTUP STREET:</label>
                        <div class="clear"></div>
                        @*<input name="" type="text" class="left">*@
                        @Html.TextBoxFor(x => x.StartUpCategory, new { @maxlength = 30, @class = "left", @data_required = true })
                        @*<input name="" type="text" class="right">*@
                        @Html.TextBoxFor(x => x.StartUpStreet, new { @maxlength = 30, @class = "right" })
                        <div class="clear"></div>
                        <label class="left">STARTUP CONTACT NAME:</label>
                        <label class="right">STARTUP ZIP:</label>
                        <div class="clear"></div>
                        @*<input name="" type="text" class="left">*@
                        @Html.TextBoxFor(x => x.StartUpContactName, new { @maxlength = 30, @class = "left", @data_required = true })
                        @*<input name="" type="text" class="right">*@
                        @Html.TextBoxFor(x => x.StartUpZip, new { @maxlength = 30, @class = "right" })
                        <div class="clear"></div>
                        <label class="left">STARTUP CONTACT EMAIL:</label>
                        <div class="clear"></div>
                        @*<input name="" type="text" class="left">*@ 
                        @Html.TextBoxFor(x => x.StartUpContactEmail, new { @maxlength = 30, @class = "left", @data_required = true, @data_emailValidation = true })
                        @*<input name="" type="button" class="sub_btn" value="SUBMIT">*@
                        <button type="submit" id="btnSubmitStartUp" class="sub_btn" ><span>SUBMIT</span></button>
                        <div class="clear"></div>
                      <!--form_box end-->
                    </div>
                }
                <div class="clear"></div>
                <div class="submit_foot">We're looking for funded Startups in the tech industry.</div>
                <div class="clear"></div>
                <div class="questions">Questions? startupexplorer@buddy.com</div>
                <div class="clear"></div>
              </section>
            <!--container end-->
          </article>
        <!--inner_main end-->
      </div>
    <!--main end-->
  </div>
</body>
</html>
